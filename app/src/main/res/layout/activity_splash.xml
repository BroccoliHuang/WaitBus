<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white">

    <com.eftimoff.androipathview.PathView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathView_a"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:paddingRight="264dp"
        app:svg="@raw/a"
        app:pathColor="@android:color/black"
        app:pathWidth="3"/>

    <com.eftimoff.androipathview.PathView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathView_m"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:paddingRight="262dp"
        app:svg="@raw/m"
        app:pathColor="@android:color/black"
        app:pathWidth="2"/>

    <com.eftimoff.androipathview.PathView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathView_y"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:paddingRight="151dp"
        app:svg="@raw/y"
        app:pathColor="@android:color/black"
        app:pathWidth="2"/>

    <!--Samsung S6-->
    <!--android:paddingBottom="135dp"-->
    <!--hTC Desire 610-->
    <com.eftimoff.androipathview.PathView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathView_umbrella"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="125dp"
        app:svg="@raw/umbrella"
        app:pathColor="@android:color/black"
        app:pathWidth="3"/>

    <com.eftimoff.androipathview.PathView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathView_b"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:paddingLeft="55dp"
        app:svg="@raw/b"
        app:pathColor="@android:color/black"
        app:pathWidth="3"/>

    <com.eftimoff.androipathview.PathView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathView_u"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:paddingLeft="70dp"
        app:svg="@raw/u"
        app:pathColor="@android:color/black"
        app:pathWidth="2"/>

    <com.eftimoff.androipathview.PathView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathView_s"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:paddingLeft="146dp"
        app:svg="@raw/s"
        app:pathColor="@android:color/black"
        app:pathWidth="2"/>

    <TextView android:id="@+id/textview_a_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="62sp"
        android:text="."
        android:visibility="invisible"/>

    <TextView android:id="@+id/textview_b_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="62sp"
        android:text="."
        android:visibility="invisible"/>

    <pl.droidsonroids.gif.GifImageView android:id="@+id/gifImageView_plugin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>